<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorSplash"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_margin="25dp"
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@drawable/item_bg_5"
        android:layout_height="match_parent">


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_margin="25dp"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="50dp"
                android:layout_marginBottom="20dp"
                />
    <EditText
        android:id="@+id/signin_activity_id_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ID" />

    <EditText
        android:id="@+id/signin_activity_password_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/signin_activity_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name" />

    <EditText
        android:id="@+id/signin_activity_school_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="school" />


    <EditText
        android:id="@+id/signin_activity_phone_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="phone" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입" />
            </LinearLayout>

        </LinearLayout>
</LinearLayout>